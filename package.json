{
  "name": "daily-reflection",
  "version": "1.0.0",
  "description": "Daily reflection app for sharing what's great and challenging each day",
  "main": "app.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "npm run lint:js && npm run lint:html && npm run lint:css",
    "lint:js": "eslint *.js",
    "lint:html": "htmlhint *.html",
    "lint:css": "stylelint *.css",
    "lint:fix": "eslint *.js --fix && stylelint *.css --fix"
  },
  "keywords": [
    "pwa",
    "reflection",
    "mindfulness",
    "journal"
  ],
  "author": "Daily Reflection Team",
  "license": "MIT",
  "devDependencies": {
    "@jest/environment-jsdom": "^29.7.0",
    "eslint": "^8.57.0",
    "htmlhint": "^1.1.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "*.js",
      "!sw.js",
      "!test_delete.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}